{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe 生成活动文件",
            "command": "C:\\APP\\mingw64\\bin\\gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                //"${file}",
                "*.c",
                "-o",
                //"${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${fileDirname}\\out.exe",
                //"-finput-charset=UTF-8",
                //"-fexec-charset=gbk"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe 生成发布文件",
            "command": "C:\\APP\\mingw64\\bin\\gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                //"${file}",
                "*.c",
                "-o",
                //"${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${fileDirname}\\out_re.exe",
                "-finput-charset=UTF-8",
                "-fexec-charset=gbk"
            ],
            "options": {
