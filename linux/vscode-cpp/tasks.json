{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ 生成活动文件",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                //"${file}",
                "*.c",
                "-o",
                //"${fileDirname}/${fileBasenameNoExtension}",
                "${fileDirname}/out",
                //"-finput-charset=UTF-8",
                //"-fexec-charset=gbk"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$g++"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ 生成发布文件",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                //"${file}",
                "*.c",
                "-o",
                //"${fileDirname}/${fileBasenameNoExtension}",
                "${fileDirname}/out_re",
                "-finput-charset=UTF-8",
                "-fexec-charset=gbk"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$g++"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            //"detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}